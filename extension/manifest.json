{
    "manifest_version": 3,
    "name": "FIFA Pack Tracker",
    "version": "1.0.1",
    "description": "Track and store stats of pack pulls on the EAFC Web App.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.ea.com/*"],
            "js": ["apis.js", "extractDOMData.js", "packs.js", "picks.js", "packTracker.js"],
            "run_at": "document_end",
            "type": "module"
        }
    ]
}